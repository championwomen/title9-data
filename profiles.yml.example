# Lightdash Docker Configuration
# Place this in ~/.dbt/profiles.yml for local Lightdash testing
# or use environment variables

title9:
  outputs:
    dev:
      type: postgres
      threads: 4
      host: localhost  # For local dbt CLI
      port: 5434
      user: title9
      pass: title9
      dbname: title9
      schema: dev
    
    docker:
      type: postgres
      threads: 4
      host: postgres  # Service name in Docker network
      port: 5432
      user: title9
      pass: title9
      dbname: title9
      schema: dev
    
    prod:
      type: postgres
      threads: 4
      host: localhost  # Update with production host
      port: 5432
      user: title9
      pass: title9
      dbname: title9
      schema: prod
  
  target: dev
